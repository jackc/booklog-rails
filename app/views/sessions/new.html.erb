<%= tag.div(flash[:alert], style: "color:red") if flash[:alert] %>
<%= tag.div(flash[:notice], style: "color:green") if flash[:notice] %>

<div class="card">
  <header>Login</header>

  <%= form_with url: session_path do |form| %>
    <div class="field">
      <%= form.label :username %>
      <%= form.text_field :username, required: true, autofocus: true, autocomplete: "username", placeholder: "Enter your username", value: params[:username] %>
    </div>

    <div class="field">
      <%= form.label :password %>
      <%= form.password_field :password, required: true, autocomplete: "current-password", placeholder: "Enter your password", maxlength: 72 %>
    </div>

    <%= form.button "Login", class: "btn" %>
  <% end %>
</div>
